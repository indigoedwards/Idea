#------------------------------------------------
#================================================
#=====INDIGO'S DOUBLE EXCITATION ASSEMBLER=======
#====================Idea========================
#===============POTENTIAL FILE===================
#================================================
#------------------------------------------------
import numpy as np

def potential(d):
    x = np.linspace(-20,20,300)
    
    well1 = np.piecewise(x,[[x.any()<=-d-2],[-d-2<xwell1 = numpy.piecewise(x,[x<=-d-2,-d-2<x<=-d,-d<x<=-d+2,-d+2<x],[0,-2(x-d)-4,2(x-d)-4,0])<=-d],[-d<x<=-d+2],[-d+2<x]],[0,-2*(x-d)-4,2*(x-d)-4,0])
    well2 = np.piecewise(x,[[x<=d-2],[d-2<x<=d],[d<x<=d+2],[d+2<x]],[0,-2*(x+d)-4,2*(x+d)-4,0])

    return well1+well2


